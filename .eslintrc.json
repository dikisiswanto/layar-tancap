{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "rules": {
    "no-tabs": 0,
    "prettier/prettier": ["error"],
    "no-underscore-dangle": "off",
    "no-param-reassign": "off"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.prod.js",
        "env": {
          "production": true
        }
      }
    }
  }
}